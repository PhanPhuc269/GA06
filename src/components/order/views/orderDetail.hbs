<body>
    <!-- Start Banner Area -->
    <section class="banner-area organic-breadcrumb">
        <div class="container">
            <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
                <div class="col-first">
                    <h1>Order Details</h1>
                    <nav class="d-flex align-items-center">
                        <a href="/home">Home<span class="lnr lnr-arrow-right"></span></a>
                        <a href="/order/list">Order List<span class="lnr lnr-arrow-right"></span></a>
                        <a href="/order/detail/{{order._id}}">Details</a>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!-- End Banner Area -->

    <section class="order_details_area section_gap">
        <div class="container">
            <h2 class="text-center mb-4">Order Details</h2>

            <!-- Order Information -->
            <div class="table-responsive mb-5">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th class="text-left">Order ID:</th>
                            <td>{{order._id}}</td>
                            <th class="text-left">Order Date:</th>
                            <td>{{order.createdAt}}</td>
                        </tr>
                        <tr>
                            <th class="text-left">Customer:</th>
                            <td>{{order.firstName}} {{order.lastName}}</td>
                            <th class="text-left">Email:</th>
                            <td>{{order.email}}</td>
                        </tr>
                        <tr>
                            <th class="text-left">Phone Number:</th>
                            <td>{{order.phoneNumber}}</td>
                            <th class="text-left">Address:</th>
                            <td>{{order.addressLine1}}, {{order.city}}, {{order.district}}</td>
                        </tr>
                        <tr>
                            <th class="text-left">Notes:</th>
                            <td colspan="3">{{order.orderNotes}}</td>
                        </tr>
                        <tr>
                            <th class="text-left">Total Amount:</th>
                            <td>${{order.totalAmount}}</td>
                            <th class="text-left">Shipping Fee:</th>
                            <td>${{order.shippingFee}}</td>
                        </tr>
                        <tr>
                            <th class="text-left">Status:</th>
                            <td colspan="3">{{order.status}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Product List -->
            <h3 class="text-center">Products in Order</h3>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th class="text-nowrap">Image</th>
                            <th class="text-nowrap">Product Name</th>
                            <th class="text-nowrap">Brand</th>
                            <th class="text-nowrap">Category</th>
                            <th class="text-nowrap">Color</th>
                            <th class="text-nowrap">Description</th>
                            <th class="text-nowrap">Price</th>
                            <th class="text-nowrap">Quantity</th>
                            <th class="text-nowrap">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each order.items}}
                        <tr>
                            <td class="text-left">
                                <a href="/product/product-details/{{this.productId.slug}}">
                                    <img src="/{{this.productId.image}}" alt="{{this.productId.name}}" class="img-fluid" style="width: 100px; height: auto;">
                                </a>
                            </td>
                            <td>
                                <a href="/product/product-details/{{this.productId.slug}}">
                                    {{this.productId.name}}
                                </a>
                            </td>
                            <td>{{this.productId.brand}}</td>
                            <td>{{this.productId.category}}</td>
                            <td>{{this.productId.color}}</td>
                            <td>{{this.productId.description}}</td>
                            <td>${{this.productId.price}}</td>
                            <td class="text-center">{{this.quantity}}</td>
                            <td>${{ multiply this.quantity this.productId.price }}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</body>
