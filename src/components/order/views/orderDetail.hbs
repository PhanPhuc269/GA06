<body>
    <!-- Start Banner Area -->
    <section class="banner-area organic-breadcrumb">
        <div class="container">
            <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
                <div class="col-first">
                    <h1>Chi tiết đơn hàng</h1>
                    <nav class="d-flex align-items-center">
                        <a href="/home">Trang chủ<span class="lnr lnr-arrow-right"></span></a>
                        <a href="/order/list">Danh sách đơn hàng<span class="lnr lnr-arrow-right"></span></a>
                        <a href="/order/detail/{{order._id}}">Chi tiết</a>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!-- End Banner Area -->

    <section class="order_details_area section_gap">
        <div class="container">
            <h2 class="text-center mb-4">Chi tiết đơn hàng</h2>

            <!-- Thông tin đơn hàng -->
            <div class="table-responsive mb-5">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th class="text-left">Mã đơn hàng:</th>
                            <td>{{order._id}}</td>
                            <th class="text-left">Ngày đặt:</th>
                            <td>{{order.createdAt}}</td>
                        </tr>
                        <tr>
                            <th class="text-left">Khách hàng:</th>
                            <td>{{order.firstName}} {{order.lastName}}</td>
                            <th class="text-left">Email:</th>
                            <td>{{order.email}}</td>
                        </tr>
                        <tr>
                            <th class="text-left">Số điện thoại:</th>
                            <td>{{order.phoneNumber}}</td>
                            <th class="text-left">Địa chỉ:</th>
                            <td>{{order.addressLine1}}, {{order.city}}, {{order.district}}</td>
                        </tr>
                        <tr>
                            <th class="text-left">Ghi chú:</th>
                            <td colspan="3">{{order.orderNotes}}</td>
                        </tr>
                        <tr>
                            <th class="text-left">Tổng tiền:</th>
                            <td>${{order.totalAmount}}</td>
                            <th class="text-left">Phí giao hàng:</th>
                            <td>${{order.shippingFee}}</td>
                        </tr>
                        <tr>
                            <th class="text-left">Trạng thái:</th>
                            <td colspan="3">{{order.status}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Danh sách sản phẩm -->
       <h3 class="text-center">Sản phẩm trong đơn hàng</h3>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th class="text-nowrap">Hình ảnh</th>
                <th class="text-nowrap">Tên sản phẩm</th>
                <th class="text-nowrap">Thương hiệu</th>
                <th class="text-nowrap">Danh mục</th>
                <th class="text-nowrap">Màu sắc</th>
                <th class="text-nowrap">Mô tả</th>
                <th class="text-nowrap">Giá</th>
                <th class="text-nowrap">Số lượng</th>
                <th class="text-nowrap">Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            {{#each order.items}}
            <tr>
                <td class="text-left">
                    <img src="/{{this.productId.image}}" alt="{{this.productId.name}}" class="img-fluid" style="width: 100px; height: auto;">
                </td>
                <td>{{this.productId.name}}</td>
                <td>{{this.productId.brand}}</td>
                <td>{{this.productId.category}}</td>
                <td>{{this.productId.color}}</td>
                <td>{{this.productId.description}}</td>
                <td>${{this.productId.price}}</td>
                <td class="text-center">{{this.quantity}}</td>
                <td>${{ multiply this.quantity this.productId.price }}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

    </section>
</body>
