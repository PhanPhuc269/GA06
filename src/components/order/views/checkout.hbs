<body>
    <!-- Start Banner Area -->
    <section class="banner-area organic-breadcrumb">
        <div class="container">
            <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
                <div class="col-first">
                    <h1>Checkout</h1>
                    <nav class="d-flex align-items-center">
                        <a href="/home">Home<span class="lnr lnr-arrow-right"></span></a>
                        <a href="/single-product">Checkout</a>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!-- End Banner Area -->

    <!--================Checkout Area =================-->
    <section class="checkout_area section_gap">
        <div class="container">
            <div class="billing_details">
                <div class="row">
                    <div class="col-lg-8">
                        <h3>Billing Details</h3>

                        {{#if errors}}
                            <div class="error-messages">
                                <ul>
                                    {{#each errors}}
                                        <li>{{this.msg}}</li>
                                    {{/each}}
                                </ul>
                            </div>
                        {{/if}}

                        <form class="row contact_form" id="checkout-form" action="/order/checkout" method="post" novalidate="novalidate">
                            <div class="col-md-6 form-group p_star">
                                <input type="text" class="form-control {{#if errors.firstName}}error{{/if}}" id="firstName" name="firstName" placeholder="First name" required value="{{oldInput.firstName}}">
                            </div>
                            <div class="col-md-6 form-group p_star">
                                <input type="text" class="form-control {{#if errors.lastName}}error{{/if}}" id="lastName" name="lastName" placeholder="Last name" required value="{{oldInput.lastName}}">
                            </div>
                            <div class="col-md-6 form-group p_star">
                                <input type="text" class="form-control {{#if errors.phoneNumber}}error{{/if}}" id="phoneNumber" name="phoneNumber" placeholder="Phone number" required value="{{oldInput.phoneNumber}}">
                            </div>
                            <div class="col-md-6 form-group p_star">
                                <input type="email" class="form-control {{#if errors.email}}error{{/if}}" id="email" name="email" placeholder="Email Address" required value="{{oldInput.email}}">
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input type="text" class="form-control {{#if errors.addressLine1}}error{{/if}}" id="add1" name="addressLine1" placeholder="Address line 01" required value="{{oldInput.addressLine1}}">
                            </div>
                            {{!-- 
                            <div class="col-md-12 form-group p_star">
                                <input type="text" class="form-control" id="add2" name="addressLine2" placeholder="Address line 02" value="{{oldInput.addressLine2}}">
                            </div> 
                            --}}
                            <div class="col-md-12 form-group p_star">
                                <input type="text" class="form-control {{#if errors.city}}error{{/if}}" id="city" name="city" placeholder="Town/City" required value="{{oldInput.city}}">
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input type="text" class="form-control {{#if errors.district}}error{{/if}}" id="district" name="district" placeholder="District" required value="{{oldInput.district}}">
                            </div>
                            <div class="col-md-12 form-group">
                                <input type="text" class="form-control {{#if errors.zip}}error{{/if}}" id="zip" name="zip" placeholder="Postcode/ZIP" required value="{{oldInput.zip}}">
                            </div>
                            <div class="col-md-12 form-group">
                                <textarea class="form-control" name="orderNotes" id="message" rows="1" placeholder="Order Notes">{{oldInput.orderNotes}}</textarea>
                            </div>
                            <div class="col-md-12 form-group">
                                <button type="submit" class="primary-btn">Place Order</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-lg-4">
                        <div class="order_box">
                            <h2>Your Order</h2>
                            <ul class="list" id="order-items">
                                <!-- Dữ liệu sản phẩm sẽ được thêm bằng JavaScript -->
                            </ul>
                            <ul class="list list_2">
                                <li><a href="#">Subtotal <span id="subtotal"></span></a></li>
                                <li><a href="#">Shipping <span id="shipping">Flat rate: $50.00</span></a></li>
                                <li><a href="#">Total <span id="total"></span></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================End Checkout Area =================-->

    <script src="/js/checkout.js" defer></script>
    <script src="/js/cart/cart.js" defer></script>
    <script src="/js/cart/syncCart.js" defer></script>
    <script src="/js/cart/syncUpdateCart.js" defer></script>
</body>