<body>
    <section class="banner-area organic-breadcrumb">
        <div class="container">
            <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
                <div class="col-first">
                    <h1>Payment QR Code</h1>
                    <nav class="d-flex align-items-center">
                        <a href="/home">Home<span class="lnr lnr-arrow-right"></span></a>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!-- End Banner Area -->

    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-lg-8 text-center">
              <h2 class="text-primary font-weight-bold mb-4">Scan QR Code to Complete Payment</h2>

            <!-- Nội dung chính -->
            <div class="payment-info d-flex flex-column align-items-center p-4 border rounded shadow-sm">
                <!-- Hiển thị Amount và Description -->
                {{!-- <div class="text-center mb-4">
                    <p class="lead mb-2"><strong>Amount:</strong> <span class="text-success">{{ formatCurrencyVND amount }}</span></p>
                    <p class="lead"><strong>Description:</strong> <span class="text-secondary">{{ description }}</span></p>
                </div> --}}

                <!-- Hiển thị thông tin chi tiết Order -->
                <div class="order-details text-center">
                    <h4 class="text-secondary mb-3">Order Details</h4>
                    <p class="mb-1"><strong>Order ID:</strong> {{ orderDetails.id }}</p>
                    <p class="mb-1"><strong>Customer Name:</strong> {{ orderDetails.customerName }}</p>
                    <p class="mb-1"><strong>Total Amount:</strong> <span class="text-success">{{ formatCurrencyVND orderDetails.totalAmount }}</span></p>
                    <p class="mb-1"><strong>Order Date:</strong> {{ orderDetails.createdAt }}</p>
                </div>
            </div>

                <!-- QR Code Area -->
                <div class="qr-code mt-4 p-3 border rounded bg-light" id="qr-code-container" style="display: none;">
                    <img src="{{ qrCode }}" alt="QR Code" class="img-fluid shadow-sm" id="qr-code-img" style="max-width: 300px;">
                </div>

                <!-- Khu vực đếm ngược -->
                <div id="countdown-timer" class="mt-3 text-warning" style="display: none;">
                    <h4>Time remaining: <span id="time-left" class="font-weight-bold">05:00</span></h4>
                </div>

                <!-- Thông báo -->
                <div id="payment-status" class="alert mt-3" style="display: none;"></div>

                <!-- Nút thanh toán và hủy -->
                <div class="button-container mt-4">
                    <button id="btn-pay" class="btn btn-success btn-lg px-5 shadow-sm" data-transaction-id="{{transactionId}}">
                        <i class="fas fa-qrcode"></i> Proceed to Payment
                    </button>
                    <button id="btn-cancel" class="btn btn-outline-danger btn-lg px-5 shadow-sm ml-3" style="display: none;">
                        <i class="fas fa-times-circle"></i> Cancel Payment
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Spacer -->
    <div class="footer-spacer"></div>

    <script src="/js/paymentOrder.js"></script>
</body>
